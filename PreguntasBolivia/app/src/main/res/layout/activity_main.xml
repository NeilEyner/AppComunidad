<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".MainActivity">

    <!-- Título principal con animación de entrada -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/app_name"
        android:shadowColor="@color/white"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="8"
        android:textColor="@color/textColorPrimary"
        android:textSize="72sp"
        android:fontFamily="@font/cheese_matcha"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/container_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="64dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Botón de inicio del juego -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="@color/btnStartGameColor"
                android:padding="16dp"
                android:text="@string/iniciar_juego"
                android:textColor="@color/textColorPrimary"
                android:textSize="24sp"
                android:fontFamily="@font/cheese_matcha"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_play"
                app:iconGravity="textStart" />

            <!-- Botón de progreso -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="@color/btnProgressColor"
                android:padding="16dp"
                android:text="@string/progreso"
                android:textColor="@color/textColorPrimary"
                android:textSize="24sp"
                android:fontFamily="@font/cheese_matcha"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_progress"
                app:iconGravity="textStart" />

            <!-- Botón de créditos -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCredits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="@color/btnCreditsColor"
                android:padding="16dp"
                android:text="@string/creditos"
                android:textColor="@color/textColorPrimary"
                android:textSize="24sp"
                android:fontFamily="@font/cheese_matcha"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_info"
                app:iconGravity="textStart" />

            <!-- Botón de salir -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnExit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="@color/btnExitColor"
                android:padding="16dp"
                android:text="@string/salir"
                android:textColor="@color/textColorPrimary"
                android:textSize="24sp"
                android:fontFamily="@font/cheese_matcha"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_exit"
                app:iconGravity="textStart" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>