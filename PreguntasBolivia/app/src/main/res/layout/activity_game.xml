<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:padding="16dp"
    >

    <!-- Barra de progreso en la parte superior -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Contador de preguntas -->
    <TextView
        android:id="@+id/tvQuestionCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pregunta 1/10"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/cheese_matcha"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/progressBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Card para la pregunta -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardQuestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvQuestionCounter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Cuál es la pregunta del quiz?"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/cheese_matcha"
            android:gravity="center"
            android:padding="16dp" />
    </androidx.cardview.widget.CardView>

    <!-- Contenedor de botones para las opciones -->
    <LinearLayout
        android:id="@+id/btnGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/cardQuestion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <!-- Botones de opción -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOption1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opción 1"
            android:textSize="18sp"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/btnPregunta"
            android:textColor="@android:color/white"
            android:fontFamily="@font/cheese_matcha"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_option_a"
            app:iconGravity="textStart" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOption2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opción 2"
            android:textSize="18sp"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/btnPregunta"
            android:textColor="@android:color/white"
            android:fontFamily="@font/cheese_matcha"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_option_b"
            app:iconGravity="textStart" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOption3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opción 3"
            android:textSize="18sp"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/btnPregunta"
            android:textColor="@android:color/white"
            android:fontFamily="@font/cheese_matcha"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_option_c"
            app:iconGravity="textStart" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOption4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opción 4"
            android:textSize="18sp"
            android:padding="16dp"
            android:backgroundTint="@color/btnPregunta"
            android:textColor="@android:color/white"
            android:fontFamily="@font/cheese_matcha"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_option_d"
            app:iconGravity="textStart" />
    </LinearLayout>

    <!-- Temporizador -->
    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:30"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/cheese_matcha"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>